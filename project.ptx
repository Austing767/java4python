<?xml version="1.0" encoding="utf-8"?>
<project ptx-version="2">
  <targets>
    <target
      name="web"
      format="html"
      source="main.ptx"
      publication="publication-rs-for-all.xml"
      output-dir="output/web" />
    <target
      name="print"
      format="pdf"
      latex-engine="xelatex"
      source="main.ptx"
      publication="publication-rs-for-all.xml"
      output-dir="output/print"/>
    <target
      name="runestone"
      format="html"
      platform="runestone"
      source="main.ptx"
      publication="publication-rs-academy.xml"
      xsl="xsl/runestone.xsl">
      <stringparams author.tools="yes" html.css.extra="external/custom-styles.css" />
    </target>
  </targets>
</project>